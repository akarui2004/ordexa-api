{
   "name": "ordexa-api",
   "version": "1.0.0",
   "description": "Ordexa is a modern, scalable API-first platform designed to streamline cross-border order management",
   "main": "dist/server.js",
   "author": "akarui2004 <minhdpc@gmail.com>",
   "license": "MIT",
   "scripts": {
      "typeorm": "typeorm-ts-node-commonjs",
      "dev": "nodemon",
      "clean": "rm -rf dist",
      "build": "yarn clean && tsc --project tsconfig.json && tscpaths -p tsconfig.json -s . -o ./dist",
      "start": "node -r tsconfig-paths/register dist/server.js",
      "db:migrate": "yarn typeorm migration:run -d config/data-source.ts",
      "db:rollback": "yarn typeorm migration:revert -d config/data-source.ts",
      "schema:drop": "yarn typeorm schema:drop -d config/data-source.ts",
      "migration:create": "ts-node -r tsconfig-paths/register -P tsconfig.json ./commands/run.ts migration:create"
   },
   "dependencies": {
      "busboy": "^1.6.0",
      "chalk": "^5.4.1",
      "commander": "^13.1.0",
      "cors": "^2.8.5",
      "dotenv": "^16.5.0",
      "express": "^5.1.0",
      "express-list-routes": "^1.2.4",
      "express-validator": "^7.2.1",
      "fast-jwt": "^6.0.1",
      "helmet": "^8.1.0",
      "pg": "^8.15.6",
      "reflect-metadata": "^0.2.2",
      "toml": "^3.0.0",
      "typedi": "^0.10.0",
      "typeorm": "0.3.22",
      "typescript": "^5.8.3",
      "winston": "^3.17.0",
      "winston-daily-rotate-file": "^5.0.0"
   },
   "devDependencies": {
      "@types/busboy": "^1.5.4",
      "@types/cors": "^2.8.17",
      "@types/express": "^5.0.1",
      "@types/multer": "^1.4.12",
      "@types/mysql": "^2.15.27",
      "@types/node": "^22.15.3",
      "erdia": "^3.7.1",
      "nodemon": "^3.1.10",
      "ts-node": "^10.9.2",
      "tsconfig-paths": "^4.2.0",
      "tscpaths": "^0.0.9"
   }
}
